.wrapper {
  background-color: white;
}


.l-radio {
  padding-left: 40rpx;
  box-sizing: border-box;
  color: rgba(140, 152, 174, 1) !important;
}

.common-list {
  display: flex;
  flex-direction: column;
  padding: 30px 0;
}

.common-item {
  box-shadow: 0px -4px 16px 0px rgba(148, 163, 178, 0.2);
  border-bottom: 1px solid rgba(148, 163, 178, 0.5);
  width: 100%;
  height: 30px;
  line-height: 30px;
  padding: 10px;
}


.header {
  padding: 10px;
  text-align: center;
}

.score {
  line-height: 30px;
  height: 30px;
  padding: 10px;
}

.score-item {
  border-bottom: 1px solid #776e6e;
}

.btn-container {
  padding: 10px;
}